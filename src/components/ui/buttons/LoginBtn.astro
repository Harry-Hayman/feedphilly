---
const { title = "Log in" } = Astro.props;

interface Props {
  title?: string;
}

const baseClasses =
  "flex items-center gap-x-2 text-base md:text-sm font-medium text-neutral-600 ring-zinc-500 transition-all duration-300 ease-in-out outline-none hover:-translate-y-0.5 hover:scale-105";
const hoverClasses = "hover:text-green-600 dark:hover:text-green-500 hover:shadow-sm";
const darkClasses =
  "dark:border-neutral-700 dark:text-neutral-400 dark:ring-zinc-200 dark:focus:outline-none";
const mdClasses = "md:my-6 md:border-s md:border-neutral-300 md:ps-6";
const txtSizeClasses = "2xl:text-base";
const userSVG = `<svg
      class="h-4 w-4 flex-shrink-0 transition-transform duration-300 group-hover:rotate-12"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
  >
    <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path>
    <circle cx="12" cy="7" r="4"></circle>
  </svg>`;
---

<a
  href="/admin"
  class={`group relative ${baseClasses} ${hoverClasses} ${darkClasses} ${mdClasses} ${txtSizeClasses} focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-green-500`}
>
  <span class="relative z-10 flex items-center gap-x-2">
    <Fragment set:html={userSVG} />
    {title}
  </span>
  <span class="absolute inset-0 -z-10 scale-75 rounded-lg bg-green-100 opacity-0 transition-all duration-300 group-hover:scale-100 group-hover:opacity-10 dark:bg-green-500"></span>
</a>
