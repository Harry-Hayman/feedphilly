---
interface Props {
  message: string;
}

const { message } = Astro.props;
---
<div class="flex justify-end mb-4">
  <div class="flex items-end gap-3">
    <div class="max-w-[75%] order-1">
      <div class="bg-white text-gray-900 px-5 py-3 rounded-2xl rounded-br-sm text-base shadow-md border border-gray-100">
        {message}
      </div>
    </div>
    <div class="w-10 h-10 rounded-full bg-gray-100 p-2 order-2 flex items-center justify-center shadow-sm">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-600" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"/>
      </svg>
    </div>
  </div>
</div>