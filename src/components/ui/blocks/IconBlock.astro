---
// Get heading and content from Astro props
const { heading, content, url = "#" } = Astro.props;

// Define TypeScript interface for props
interface Props {
  heading?: string;
  content?: string;
  url?: string;
}

// Define classes for heading and content
const headingClasses =
  "text-balance text-lg font-bold text-gray-800 dark:text-neutral-200 group-hover:text-green-600 dark:group-hover:text-green-400 transition-colors duration-300";
const contentClasses =
  "mt-1 text-pretty text-neutral-700 dark:text-neutral-300 group-hover:text-neutral-900 dark:group-hover:text-neutral-200 transition-colors duration-300";
---

<!-- The root container that wraps everything in a link -->
<div
  class="group flex gap-x-5 rounded-lg p-4 transition-all duration-300 hover:-translate-y-1 hover:bg-green-50 hover:shadow-lg dark:hover:bg-neutral-800 cursor-pointer"
  aria-label={`Learn more about ${heading}`}
>
  <!-- Icon container with hover effect -->
  <div class="flex-shrink-0 transition-transform duration-300 group-hover:scale-110">
    <slot />
  </div>
  <div class="grow">
    <!-- Heading of the section -->
    <h3 class={headingClasses}>
      {heading}
    </h3>
    <!-- Content text of the section -->
    <p class={contentClasses}>{content}</p>
  </div>
</div>
