---
import MainLayout from "@/layouts/MainLayout.astro";
import { Image } from "astro:assets";
import donationImage from "@images/feedphilly/feed_philly_donation_crowd2.png";
import harryImage from "@images/blog/members/harryhayman_founder.jpg";
import gabrielleImage from "@images/blog/members/Gabrielle M- President .jpg";
import davidImage from "@images/blog/members/David Greensburg-Communications I.jpg";
import anujImage from "@images/blog/members/David Greensburg-Communications I.jpg";

const team = [
  {
    name: "Harry Hayman",
    role: "Founder",
    bio: "Harry Hayman, Founder of Feed Philly Coalition, is committed to tackling food insecurity through a collaborative, technology-driven approach. With a background in food systems and community outreach, Harry builds partnerships with schools, government, and businesses to promote access to nutritious food as a foundation for a healthier Philadelphia.",
    avatar: harryImage,
  },
  {
    name: "Gabrielle M",
    role: "President",
    bio: "Gabrielle M, President of Feed Philly Coalition, is passionate about creating sustainable solutions to food insecurity in Philadelphia. With a background in public health and community organizing, Gabrielle leads initiatives to address food deserts, improve food access, and promote health equity for all Philadelphians.",
    avatar: gabrielleImage,
  },
  {
    name: " David Greensburg",
    role: " Community Outreach Coordinator",
    bio: "David Greensburg, Community Outreach Coordinator at Feed Philly Coalition, is dedicated to building relationships with local organizations, schools, and businesses to expand access to healthy food in underserved communities. With a background in social work and community development, David is committed to creating a more equitable food system in Philadelphia.",
    avatar: davidImage,
  },
  {
    name: "Anuj Paudel",
    role: "Technical Lead",
    bio: "Anuj Paudel, Technical Lead at Feed Philly Coalition, is passionate about leveraging technology to address food insecurity in Philadelphia. With a background in software engineering and data analysis, Anuj develops innovative solutions to improve food access, streamline operations, and empower communities to fight hunger.",
    avatar: anujImage,
  },
];
---

<MainLayout title="About Us | Feed Philly Coalition">
  <div class="py-12 sm:py-16 lg:py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1
          class="text-4xl font-bold tracking-tight text-neutral-900 dark:text-white sm:text-5xl md:text-6xl"
        >
          Our Team
        </h1>
        <p
          class="mx-auto mt-3 max-w-2xl text-xl text-neutral-500 dark:text-neutral-400 sm:mt-4"
        >
          Meet the passionate individuals dedicated to fighting food insecurity
          in Philadelphia
        </p>
      </div>

      <div class="mt-16">
        <div class="mx-auto max-w-5xl">
          <Image
            src={donationImage}
            alt="Feed Philly team at a community event"
            class="w-full rounded-lg shadow-xl"
          />
        </div>
      </div>

      <div class="mt-16">
        <div class="grid gap-12 md:grid-cols-2 lg:gap-16">
          {
            team.map((member) => (
              <div class="flex flex-col items-center md:flex-row">
                <img
                  src={member.avatar.src}
                  alt={`Photo of ${member.name}`}
                  class="h-32 w-32 rounded-full object-cover md:h-40 md:w-40"
                />
                <div class="mt-6 text-center md:ml-8 md:mt-0 md:text-left">
                  <h3 class="text-xl font-bold text-neutral-900 dark:text-white">
                    {member.name}
                  </h3>
                  <p class="mt-1 text-lg font-medium text-yellow-600 dark:text-yellow-400">
                    {member.role}
                  </p>
                  <p class="mt-3 text-base text-neutral-600 dark:text-neutral-400">
                    {member.bio}
                  </p>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</MainLayout>
