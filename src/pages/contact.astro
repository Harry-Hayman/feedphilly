  {
    name: "Email",
    url: "mailto:info@feedphilly.org",
    icon: "M1.5 8.67v8.58a3 3 0 003 3h15a3 3 0 003-3V8.67l-8.928 5.493a3 3 0 01-3.144 0L1.5 8.67z M22.5 6.908V6.75a3 3 0 00-3-3h-15a3 3 0 00-3 3v.158l9.714 5.978a1.5 1.5 0 001.572 0L22.5 6.908z"
  }
];
---

<MainLayout title="Contact Us | Feed Philly Coalition">
  <div class="py-12 sm:py-16 lg:py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-bold tracking-tight text-neutral-900 sm:text-5xl md:text-6xl dark:text-white">
          Contact Us
        </h1>
        <p class="mx-auto mt-3 max-w-2xl text-xl text-neutral-500 sm:mt-4 dark:text-neutral-400">
          Join us in the fight against hunger. Your support can provide a meal, restore hope, and change a life.
        </p>
      </div>

      <div class="mt-16 grid gap-8 lg:grid-cols-2">
        <div>
          <div class="rounded-lg bg-white p-8 shadow-lg dark:bg-neutral-800">
            <h2 class="text-2xl font-bold text-neutral-900 dark:text-white">Get in Touch</h2>
            <p class="mt-4 text-neutral-600 dark:text-neutral-400">
              Have questions or want to get involved? Reach out to us using the form or contact information below.
            </p>

            <div class="mt-8 space-y-6">
              <div>
                <label class="block text-sm font-medium text-neutral-700 dark:text-neutral-300">Name</label>
                <input type="text" class="mt-1 block w-full rounded-md border-neutral-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500 dark:border-neutral-600 dark:bg-neutral-700" />
              </div>
              <div>
                <label class="block text-sm font-medium text-neutral-700 dark:text-neutral-300">Email</label>
                <input type="email" class="mt-1 block w-full rounded-md border-neutral-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500 dark:border-neutral-600 dark:bg-neutral-700" />
              </div>
              <div>
                <label class="block text-sm font-medium text-neutral-700 dark:text-neutral-300">Message</label>
                <textarea rows="4" class="mt-1 block w-full rounded-md border-neutral-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500 dark:border-neutral-600 dark:bg-neutral-700"></textarea>
              </div>
              <button class="inline-flex items-center rounded-md border border-transparent bg-yellow-600 px-6 py-3 text-base font-medium text-white shadow-sm hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:ring-offset-2 dark:bg-yellow-500 dark:hover:bg-yellow-600">
                Send Message
              </button>
            </div>
          </div>
        </div>

        <div class="space-y-8">
          <div class="rounded-lg bg-white p-8 shadow-lg dark:bg-neutral-800">
            <h2 class="text-2xl font-bold text-neutral-900 dark:text-white">Contact Information</h2>
            <div class="mt-6 space-y-4">
              <div class="flex items-center">
                <svg class="h-6 w-6 text-yellow-600 dark:text-yellow-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <span class="ml-3 text-neutral-600 dark:text-neutral-400">(215) 555-1234</span>
              </div>
              <div class="flex items-center">
                <svg class="h-6 w-6 text-yellow-600 dark:text-yellow-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <span class="ml-3 text-neutral-600 dark:text-neutral-400">info@feedphilly.org</span>
              </div>
              <div class="flex items-center">
                <svg class="h-6 w-6 text-yellow-600 dark:text-yellow-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <span class="ml-3 text-neutral-600 dark:text-neutral-400">5 US-1, Philadelphia, PA 19004</span>
              </div>
            </div>

            <h3 class="mt-8 text-xl font-bold text-neutral-900 dark:text-white">Connect With Us</h3>
            <div class="mt-4 flex space-x-4">
              {socialLinks.map((link) => (
                <a
                  href={link.url}
                  class="text-neutral-500 hover:text-yellow-600 dark:text-neutral-400 dark:hover:text-yellow-400"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <span class="sr-only">{link.name}</span>
                  <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d={link.icon} />
                  </svg>
                </a>
              ))}
            </div>
          </div>

          <Image
            src={donationBoxes}
            alt="Feed Philly donation boxes"
            class="rounded-lg shadow-lg"
          />
        </div>
      </div>
    </div>
  </div>
</MainLayout>
