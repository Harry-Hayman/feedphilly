---
import MainLayout from "@/layouts/MainLayout.astro";
import { Image } from "astro:assets";
import donationImage from "@images/feedphilly/feed_philly_donation_2.png";
import teamImage from "@images/feedphilly/feed_philly_team.jpg";
import warehouseImage from "@images/feedphilly/feed_philly_warehouse.jpg";
import childrenImage from "@images/feedphilly/hungry_children.png";

const impact = [
  {
    heading: "50,000+",
    content: "Meals distributed monthly to families in need across Philadelphia",
    icon: "chart-bar"
  },
  {
    heading: "25+",
    content: "Community organizations actively partnering in our mission",
    icon: "users-group"
  },
  {
    heading: "15",
    content: "Neighborhood food access points established and operating",
    icon: "location"
  },
  {
    heading: "100%",
    content: "Commitment to data-driven solutions and sustainable impact",
    icon: "chart-line"
  }
];

const howWeMakeDifference = [
  {
    heading: "Food Distribution",
    content: "We organize regular food distribution events throughout Philadelphia, ensuring nutritious meals reach those who need them most.",
    icon: "box"
  },
  {
    heading: "Community Outreach",
    content: "Our dedicated team works directly with communities to understand their needs and provide targeted support.",
    icon: "users"
  },
  {
    heading: "Data Analysis",
    content: "We use data to identify food deserts, gaps in resources, and opportunities for intervention to maximize our impact.",
    icon: "chart"
  },
  {
    heading: "Education Programs",
    content: "We provide nutrition education and cooking workshops to help families make informed dietary choices.",
    icon: "book"
  }
];

const stakeholders = [
  {
    title: "School District of Philadelphia",
    description: "As the official partner for food insecurity, Feed Philly supports students with access to nutritious food.",
    icon: "academic-cap"
  },
  {
    title: "Local Government Officials",
    description: "Engaging policymakers to support data-driven solutions for food security.",
    icon: "building-office"
  },
  {
    title: "Business Community",
    description: "Working with businesses to create sustainable food distribution programs.",
    icon: "briefcase"
  },
  {
    title: "Anchor Institutions",
    description: "Partnering with hospitals and universities to expand our reach.",
    icon: "building-library"
  }
];
---

<MainLayout title="Our Work | Feed Philly Coalition">
  <div class="py-12 sm:py-16 lg:py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-bold tracking-tight text-neutral-900 sm:text-5xl md:text-6xl dark:text-white">
          Our Work
        </h1>
        <p class="mx-auto mt-3 max-w-2xl text-xl text-neutral-500 sm:mt-4 dark:text-neutral-400">
          Working together to create lasting change through collaborative, data-driven solutions.
        </p>
      </div>

      <!-- Our Impact Section -->
      <div class="mt-16">
        <h2 class="text-3xl font-bold text-neutral-900 dark:text-white mb-8 text-center">Our Impact</h2>
        <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
          {impact.map((item) => (
            <div class="flex flex-col items-center p-6 bg-white rounded-lg shadow-lg dark:bg-neutral-800">
              <span class="inline-block p-3 mb-4 rounded-lg bg-primary/10">
                <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={
                    item.icon === "chart-bar" ? "M8 13v-1m4 1v-3m4 3V8M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z" :
                    item.icon === "users-group" ? "M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" :
                    item.icon === "location" ? "M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z" :
                    "M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"
                  } />
                </svg>
              </span>
              <h3 class="text-2xl font-bold text-neutral-900 dark:text-white mb-2">{item.heading}</h3>
              <p class="text-center text-neutral-600 dark:text-neutral-400">{item.content}</p>
            </div>
          ))}
        </div>
      </div>

      <!-- How We Make Difference Section -->
      <div class="mt-24">
        <h2 class="text-3xl font-bold text-neutral-900 dark:text-white mb-8 text-center">How We Make a Difference</h2>
        <div class="grid gap-8 md:grid-cols-2">
          {howWeMakeDifference.map((item) => (
            <div class="flex gap-6 p-6 bg-white rounded-lg shadow-lg dark:bg-neutral-800">
              <div class="flex-shrink-0">
                <span class="inline-block p-3 rounded-lg bg-primary/10">
                  <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={
                      item.icon === "box" ? "M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" :
                      item.icon === "users" ? "M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" :
                      item.icon === "chart" ? "M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" :
                      "M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                    } />
                  </svg>
                </span>
              </div>
              <div>
                <h3 class="text-xl font-bold text-neutral-900 dark:text-white mb-2">{item.heading}</h3>
                <p class="text-neutral-600 dark:text-neutral-400">{item.content}</p>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Who We Serve Section -->
      <div class="mt-24">
        <h2 class="text-3xl font-bold text-neutral-900 dark:text-white mb-8">Who We Serve</h2>
        <div class="grid gap-12 lg:grid-cols-2">
          <Image
            src={childrenImage}
            alt="Children affected by food insecurity"
            class="rounded-lg shadow-xl h-full object-cover"
            width={600}
            height={600}
          />
          <div class="flex flex-col justify-center">
            <p class="text-lg text-neutral-600 dark:text-neutral-400 mb-8">
              Food insecurity affects thousands of Philadelphia families, particularly children. We work with various stakeholders to ensure that no one in our community goes hungry.
            </p>
            <div class="grid gap-6">
              {stakeholders.map((item) => (
                <div class="flex items-start gap-4 p-4 rounded-lg bg-white shadow-md dark:bg-neutral-800">
                  <span class="inline-block p-3 rounded-lg bg-primary/10">
                    <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={
                        item.icon === "academic-cap" ? "M12 14l9-5-9-5-9 5 9 5z M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" :
                        item.icon === "building-office" ? "M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" :
                        item.icon === "briefcase" ? "M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" :
                        "M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z"
                      } />
                    </svg>
                  </span>
                  <div>
                    <h3 class="text-lg font-semibold text-neutral-900 dark:text-white">{item.title}</h3>
                    <p class="mt-1 text-neutral-600 dark:text-neutral-400">{item.description}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>

      <!-- Impact Gallery -->
      <div class="mt-24">
        <div class="grid gap-8 md:grid-cols-3">
          <Image 
            src={donationImage} 
            alt="Feed Philly volunteers distributing food" 
            class="rounded-lg shadow-lg object-cover"
            width={400}
            height={300}
          />
          <Image 
            src={teamImage} 
            alt="Feed Philly team working in the community" 
            class="rounded-lg shadow-lg object-cover"
            width={400}
            height={300}
          />
          <Image 
            src={warehouseImage} 
            alt="Feed Philly warehouse operations" 
            class="rounded-lg shadow-lg object-cover"
            width={400}
            height={300}
          />
        </div>
      </div>
    </div>
  </div>
</MainLayout>
