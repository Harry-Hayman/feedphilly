---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import heroImage from "@images/feedphilly/hero1.png";
import donationImage from "@images/real_images/20250212_104744.jpeg";
import teamImage from "@images/feedphilly/feed_philly_team.jpg";
import warehouseImage from "@images/real_images/IMG_0483.jpeg";
import truckImage from "@images/feedphilly/feed_philly_truck1.jpg";

const features = [
  {
    heading: "Collaboration",
    content:
      "We bring together individuals, nonprofits, businesses, and policymakers to drive community awareness and policy change for lasting impact.",
    svg: "groups",
  },
  {
    heading: "Policy Advocacy",
    content:
      "We work at the government level to advocate for policies that address food insecurity and promote equitable access.",
    svg: "chart",
  },
  {
    heading: "Community Awareness",
    content:
      "We educate and empower communities through workshops, events, and partnerships with other organizations.",
    svg: "heart",
  },
  {
    heading: "Strategic Partnerships",
    content:
      "Our coalition collaborates with organizations to create positive, sustainable change for Philadelphia.",
    svg: "leaf",
  },
];

const ogMeta = {
  title: "Fighting Food Insecurity in Philadelphia",
  description:
    "Together, we can create a city where everyone has access to healthy, nutritious food. Join Feed Philly Coalition in making lasting change through collaborative, data-driven solutions.",
  image: heroImage,
  url: Astro.url.origin + Astro.url.pathname,
};
---

<MainLayout
  meta={ogMeta.description}
  ogMeta={ogMeta}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "Organization",
    name: "Feed Philly Coalition",
    description: ogMeta.description,
    image: ogMeta.image.src,
    url: ogMeta.url,
  }}
>
  <HeroSection
    title="Fighting Food Insecurity in <span class='text-green-500 dark:text-green-400'>Philadelphia</span>"
    subTitle="Together, we can create a city where everyone has access to healthy, nutritious food."
    primaryBtn="Get Involved"
    primaryBtnURL="/get-involved"
    secondaryBtn="Learn More"
    secondaryBtnURL="/what-we-do"
    src={heroImage}
    alt="A young girl representing food insecurity in Philadelphia"
  />

  <FeaturesGeneral
    title="Our Impact"
    subTitle="Feed Philly Coalition is dedicated to creating lasting change through community awareness, policy making, and collaboration with organizations."
    src={donationImage}
    alt="Feed Philly volunteers collaborating for policy change"
    features={features}
  />

  <FeaturesNavs
    title="How We Make a <span class='text-green-500 dark:text-green-400'>Difference</span>"
    tabs={[
      {
        heading: "Policy Advocacy",
        content:
          "We engage with government officials and stakeholders to advocate for policies that address food insecurity and promote equity.",
        svg: "box",
        src: warehouseImage,
        alt: "Feed Philly policy advocacy",
        first: true,
      },
      {
        heading: "Community Awareness",
        content:
          "We raise awareness about food insecurity through educational campaigns, events, and partnerships.",
        svg: "users",
        src: warehouseImage,
        alt: "Feed Philly community awareness",
        second: true,
      },
      {
        heading: "Collaboration",
        content:
          "We collaborate with organizations and coalitions to maximize our positive impact in Philadelphia.",
        svg: "truck",
        src: truckImage,
        alt: "Feed Philly collaboration",
      },
    ]}
  />

  <TestimonialsSection
    title="Making Real Change"
    subTitle="See how Feed Philly Coalition is driving policy and collaboration for positive impact."
    testimonials={[
      {
        content:
          "Feed Philly Coalition's work in policy making and community awareness has helped bring organizations together for real change in Philadelphia.",
        author: "Maria Rodriguez",
        role: "Community Leader | North Philadelphia",
        avatarSrc:
          "https://images.unsplash.com/photo-1580489944761-15a19d654956?w=400&h=400&fit=crop&crop=face",
      },
      {
        content:
          "The coalition's collaborative approach to fighting food insecurity has made a tremendous impact in our community. Their dedication to policy change is inspiring.",
        author: "David Greensburg",
        role: "Communications Director | Feed Philly Coalition",
        avatarSrc:
          "/src/images/blog/members/David Greensburg-Communications I.jpg",
      },
      {
        content:
          "I founded Feed Philly Coalition with the vision of bringing together diverse voices to tackle food insecurity. Seeing our collaborative efforts create real policy change and community impact has been incredibly rewarding.",
        author: "Harry Hayman",
        role: "Founder | Feed Philly Coalition",
        avatarSrc: "/src/images/blog/members/harryhayman_founder.jpg",
      },
      {
        content:
          "The data-driven approach and commitment to addressing root causes of food insecurity sets this coalition apart. Real change is happening.",
        author: "Sarah Johnson",
        role: "Policy Advocate | Philadelphia Food Alliance",
        avatarSrc:
          "https://images.unsplash.com/photo-1508214751196-bcfd4ca60f91?w=400&h=400&fit=crop&crop=face",
      },
    ]}
    statistics={[
      {
        count: "25+",
        description: "organizations collaborating for policy change",
      },
      {
        count: "10+",
        description: "community awareness campaigns launched",
      },
      {
        count: "5+",
        description: "policy initiatives supported",
      },
      {
        count: "1k+",
        description: "people reached",
      },
    ]}
  />
</MainLayout>
