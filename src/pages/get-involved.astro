---
import MainLayout from "@/layouts/MainLayout.astro";
import PrimaryCTA from "@components/ui/buttons/PrimaryCTA.astro";
import { Image } from 'astro:assets';
import donationImage from "@images/feedphilly/donating_food.jpg";
import teamImage from "@images/feedphilly/feed_philly_team.jpg";

const waysToHelp = [
  {
    title: "Advocate",
    description: "Join our coalition to support policy change and raise awareness about food insecurity in Philadelphia.",
    image: teamImage,
    cta: "Sign Up to Advocate",
    link: "/contact?type=advocate"
  },
  {
    title: "Collaborate",
    description: "Partner with us and other organizations to create positive, sustainable impact through community initiatives and policy making.",
    image: donationImage,
    cta: "Become a Partner",
    link: "/contact?type=partner"
  }
];
---

<MainLayout title="Get Involved | Feed Philly Coalition">
  <section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14">
    <div class="mx-auto mb-10 max-w-2xl text-center lg:mb-14">
      <h2 class="text-2xl font-bold md:text-4xl md:leading-tight dark:text-white">Make a Difference in Philadelphia</h2>
      <p class="mt-4 text-gray-600 dark:text-gray-400">
        There are many ways you can help us create lasting change in Philadelphia. Whether through advocacy, collaboration, or spreading awareness, your involvement helps drive real impact in our community.
      </p>
    </div>

    <div class="grid gap-8 lg:grid-cols-2">
      {waysToHelp.map((way) => (
        <div class="group flex flex-col bg-white border shadow-sm rounded-xl hover:shadow-md transition dark:bg-neutral-900 dark:border-gray-800">
          <div class="aspect-w-16 aspect-h-9">
            <Image 
              src={way.image} 
              alt={way.title}
              class="w-full h-[200px] object-cover rounded-t-xl"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-800 dark:text-gray-300">
              {way.title}
            </h3>
            <p class="mt-3 text-gray-600 dark:text-gray-400">
              {way.description}
            </p>
            <div class="mt-4">
              <PrimaryCTA title={way.cta} url={way.link} />
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="mt-16 text-center">
      <h3 class="text-xl font-semibold mb-4 dark:text-white">Other Ways to Support</h3>
      <p class="text-gray-600 dark:text-gray-400 mb-6">
        You can also support our mission by:
        <br />
        • Spreading awareness on social media
        <br />
        • Supporting policy initiatives
        <br />
        • Building partnerships with organizations
      </p>
      <PrimaryCTA title="Contact Us to Learn More" url="/contact" />
    </div>
  </section>
</MainLayout>
